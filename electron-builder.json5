{
  productName: 'Retron',
  appId: 'com.example.retron',
  asar: true,
  extends: null,
  compression: 'maximum',
  copyright: 'â“’ 2023 ${author}',
  artifactName: '${productName} ${version}_${arch}.${ext}',
  directories: {
    buildResources: './buildAssets/installer/',
    output: './release/${version}',
  },
  files: ['dist/**/*', '!release/**/*', '!tests/**/*'],
  win: {
    target: [
      {
        target: 'appx',
        arch: 'x64',
      },
      {
        target: 'zip',
        arch: 'x64',
      },
      {
        target: 'portable',
        arch: 'x64',
      },
      {
        target: 'nsis',
        arch: 'x64',
      },
    ],
    icon: './buildAssets/installer/icon.ico',
  },
  portable: {
    artifactName: '${productName} ${version} Portable.${ext}',
  },
  nsis: {
    oneClick: true,
  },
  mac: {
    bundleVersion: '1.0',
    identity: null,
    hardenedRuntime: true,
    gatekeeperAssess: false,
    icon: 'buildAssets/installer/icon.icns',
    type: 'distribution',
    target: [
      {
        target: 'dmg',
        arch: ['x64', 'arm64', 'universal'],
      },
    ],
  },
  linux: {
    executableName: 'retron',
    icon: 'buildAssets/installer',
    category: 'Utility',
    target: [
      {
        target: 'snap',
        arch: 'x64',
      },
      {
        target: 'deb',
        arch: 'x64',
      },
      {
        target: 'rpm',
        arch: 'x64',
      },
    ],
  },
}
