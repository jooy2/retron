{
  "name": "retron",
  "version": "1.0.0",
  "description": "Electron + React Template",
  "main": "app/index.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "start-interface": "cross-env PORT=9090 BROWSER=none npm run start",
    "start-electron": "electron .",
    "start-electron-after-interface": "wait-on http://localhost:9090 && npm run start-electron",
    "build:mac": "cross-env GENERATE_SOURCEMAP=false NODE_ENV=production react-scripts build && electron-builder --mac",
    "build:win": "cross-env GENERATE_SOURCEMAP=false NODE_ENV=production react-scripts build && electron-builder --windows nsis:x64",
    "build:win-portable": "react-scripts build && electron-builder --windows portable --x64",
    "build:linux": "cross-env GENERATE_SOURCEMAP=false NODE_ENV=production react-scripts build && electron-builder --linux",
    "dev": "cross-env NODE_ENV=dev concurrently -n interface,app 'npm:start-interface' 'npm:start-electron-after-interface'",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src"
  },
  "build": {
    "productName": "Retron Project",
    "appId": "com.example.retron",
    "asar": true,
    "compression": "maximum",
    "extends": null,
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "./resources/installer/icon.ico"
    },
    "nsis": {
      "oneClick": true
    },
    "linux": {
      "executableName": "retron",
      "icon": "resources/installer",
      "target": [
        "deb",
        "rpm",
        "snap"
      ]
    },
    "directories": {
      "buildResources": "./resources/installer/",
      "output": "./dist/"
    },
    "files": [
      "app/**/*",
      "build/**/*",
      "config/**/*"
    ]
  },
  "author": "leejooy96 <leejooy96@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "electron": "^14.0.1",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.25.3",
    "eslint-plugin-react-hooks": "^4.2.0",
    "react-scripts": "^4.0.3",
    "wait-on": "^6.0.0",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.1"
  },
  "dependencies": {
    "@electron/remote": "^2.0.1",
    "electron-localshortcut": "^3.2.1",
    "electron-store": "^8.0.1",
    "i18next": "^20.6.1",
    "i18next-browser-languagedetector": "^6.1.2",
    "i18next-http-backend": "^1.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.12.0",
    "react-redux": "^7.2.5",
    "react-router": "^5.2.1",
    "react-router-dom": "^5.3.0",
    "redux": "^4.1.1",
    "redux-actions": "^2.6.5",
    "redux-thunk": "^2.3.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
