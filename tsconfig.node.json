{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "composite": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "package.json",
    "src/main",
    "vite.config.ts",
    "tests/**/*.ts",
    "tests/**/*.mts",
    "tests/**/*.spec.ts"]
}
